#
#
# Bash Completion Function for Fedora/RedHat Koji/Brew Build System
#
#


_brew()
{
   local cur prev commands

   COMPREPLY=()
   cur="${COMP_WORDS[COMP_CWORD]}"
   prev="${COMP_WORDS[COMP_CWORD-1]}"

   commands="add-external-repo add-group add-group-pkg add-group-req add-host add-host-to-channel add-pkg add-tag add-tag-inheritance add-target add-user add-volume block-group-pkg block-group-req block-pkg build buildinfo call cancel chain-build clone-tag disable-host disable-user download-build edit-external-repo edit-host edit-tag edit-tag-inheritance edit-target enable-host enable-user free-task grant-permission help import import-archive import-comps import-in-place import-sig latest-by-tag latest-pkg list-api list-buildroot list-external-repos list-groups list-history list-hosts list-permissions list-pkgs list-signed list-tag-history list-tag-inheritance list-tagged list-tags list-targets list-tasks list-untagged list-volumes lock-tag make-task maven-build mock-config move-pkg prune-signed-copies regen-repo remove-channel remove-external-repo remove-host-from-channel remove-tag remove-tag-inheritance remove-target rename-channel restart-hosts resubmit revoke-permission rpminfo runroot search set-build-volume set-pkg-arches set-pkg-owner set-pkg-owner-global set-task-priority show-groups spin-appliance spin-livecd tag-pkg taginfo taskinfo unblock-group-pkg unblock-group-req unblock-pkg unlock-tag untag-pkg wait-repo watch-logs watch-task win-build wrapper-rpm write-signed-rpm"

   if [[ ${COMP_CWORD} -eq 1 ]] ; then
      COMPREPLY=($(compgen -W "${commands}" -- ${cur}))
      return 0
   fi

   # Should now give individual options for each command.
}
complete -F _brew brew koji


